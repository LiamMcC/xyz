<div class="w3-content w3-container w3-padding-64" id="about">
  <h3 class="w3-center">Happy Kids Gallery</h3>
  
  
   <div class="w3-row-padding w3-center">
  <% @gallery.each do |promo| %>
  
     <div class="w3-col m4 " style="min-height: 500px;">
      <img src="/assets/<%= promo.image %>" style="width:100%;" onclick="onClick(this)" class="w3-hover-opacity" alt="<%= promo.alt %>">
  
     <p class="w3-justify" style="margin-left:8px;margin-right:8px;white-space: pre-line;" ><%= promo.description%></p>
     <a href="/deletegallery/<%= promo.id %>" class="w3-button w3-red">Delete Me</a>
 </div>
  
  
  <% end %>
  
  
  </div>
  
  
  
</div>



