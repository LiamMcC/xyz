          <%= link_to 'PROFILE', edit_user_registration_path,  class: "w3-bar-item w3-button" %>
          <% else %>
                 <%= link_to '<i class="fa fa-user"></i> ''REGISTER'.html_safe, new_user_registration_path, class: "w3-bar-item w3-button" %>
                 <%= link_to '<i class="fa fa-user"></i> ''SIGN-IN'.html_safe, new_user_session_path,  class: "w3-bar-item w3-button" %>
          <% end %>







      <a href="#about" class="w3-bar-item w3-button">ENROLL</a>
