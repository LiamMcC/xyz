<div class="w3-content w3-container w3-padding-64" id="about">
  <div class="w3-row w3-container">
    <div class="w3-center w3-padding-64">
      <span class="w3-xlarge w3-bottombar w3-border-dark-grey w3-padding-16">Edit Profile <%= current_user.username %></span>
    </div>
    
    
    <div class="w3-center w3-padding-64">
      
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <label class="w3-xlarge  w3-padding-8">Email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"w3-input w3-border w3-hover-border-black", :style =>"width:100%" %>
  </div>
  
  
      <div class="field">
    <label class="w3-xlarge  w3-padding-8">Username</label>
    <%= f.text_field :username, autofocus: true, autocomplete: "email", :class =>"w3-input w3-border w3-hover-border-black", :style =>"width:100%" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 <div class="field">
    <label class="w3-xlarge  w3-padding-8">Password To Confirm Changes</label>
    <%= f.password_field :current_password, autocomplete: "current-password", :class =>"w3-input w3-border w3-hover-border-black", :style =>"width:100%" %>
  </div>
  
  
  
     <div class="w3-center w3-padding-64">
      <%= f.submit "Update", :class =>"w3-button w3-green w3-padding-large"  %> |
      <a href="#" id="doIt" class="w3-button w3-orange w3-padding-large">Change Password</a> |
      
    </div>

<div id="pchange" style="display:none; width:100%;">
 
  <div class="field">
    <label class="w3-xlarge  w3-padding-8">New Password</label>
    <p>Leave blank if you dont want to change it</p>
    <%= f.password_field :password, autocomplete: "new-password", :class =>"w3-input w3-border w3-hover-border-black", :style =>"width:100%" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <label class="w3-xlarge  w3-padding-8">Confirm New Password</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class =>"w3-input w3-border w3-hover-border-black", :style =>"width:100%" %>
  </div>

 </div>

 
<% end %>

<h3>Cancel my account</h3>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class =>"w3-button w3-red w3-padding-large"  %>

<%= link_to "Back", :back %>

      
      <script>
$(document).ready(function(){
  $("#doIt").click(function(){
    $("#pchange").slideToggle();
  });
});
</script>
      
      
      </div>
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
